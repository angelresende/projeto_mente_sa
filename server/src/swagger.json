{
    "openapi": "3.0.0",
    "info":{
        "title": "API Projeto Mente Sã",
        "description": "Essa API tem como objetivo integrar informações ao Projeto Mente Sã.",
        "termsOfService": "http://localhost:3000/terms",
        "contact": {
            "email": "angelresende007@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers":[
        {
            "url":"http://localhost:3000",
            "description": "API de teste"
        }
    ],
    "paths":{
        "/professionals":{
            "post":{
                "summary": "Cadastro de profissionais dentro do sistema",
                "description": "Essa rota será responsável por cadastrar os profissionais no sistema.",
                "tags": ["Professionals"],
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema": {
                                "$ref": "#/components/schemas/Professional"
                            }
                        },
                        "examples":{
                            "professional":{
                                "value":{
                                    "nome": "Maria da Silva",
                                    "crp": "98765/99",
                                    "contato": 22987541236,
                                    "abordagem": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris non dui maximus, sagittis diam ac"
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "400": {
                        "description": "Professional Already exists"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "schema": {
                                "type": "object",
                                "items":{
                                    "$ref": "#/components/schemas/Professional"
                                }
                            }
                        }
                    }
                }
            },
            "get":{
                "summary": "Lista de profissionais cadastros dentro do sistema",
                "description": "Essa rota será responsável por apresentar os profissionais cadastrados no sistema."
            },
            "patch":{
                "summary": "Lista de profissionais cadastros dentro do sistema",
                "description": "Essa rota será responsável por apresentar os profissionais cadastrados no sistema."
            }           

        }
    },
    "components": {
        "schemas": {
            "Professional":{
                "type": "object",
                "properties":{                    
                    "nome": {
                        "type": "string"
                    }, 
                    "crp": {
                        "type": "string"
                    },
                    "contato": {
                        "type": "number"
                    },
                    "abordagem": {
                        "type": "string"
                    },
                    "id": { 
                        "type": "number"
                    }
                }
            },
            "Patient":{
                "type": "object",
                "properties":{
                    "id": { 
                        "type": "number"
                    },
                    "nome": {
                        "type": "string"
                    }, 
                    "cpf": {
                        "type": "number"
                    },
                    "email": {
                        "type": "string"
                    },
                    "genero": {
                        "type": "string"
                    },
                    "data_nascimento": {
                        "type": "date"
                    }
                }
            }
        }
    }
   
}